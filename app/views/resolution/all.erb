<div class="medium-10 medium-centered columns res-box transparent">
  <h2 class="resolutions-title">On Track:</h2>
  <% @resolutions.reverse.each_with_index do |resolution, index| %>
    <div class="row <%= "subtle-background" if index % 2 == 1 %>">
      <div class="medium-8 columns">
        <h4 class="on-track"><%= resolution.title %></h4>
      </div>
      <div class="medium-4 columns">
        <form action='/resolution/<%= resolution.id %>' class="control-form" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="link-button"><i class="fa fa-trash fa-lg trash"></i></button>
        </form>
        <form action='/resolution/<%= resolution.id %>/fail' class="control-form" method="POST">
          <input type="hidden" name="_method" value="PUT">
          <button type="submit" class="link-button"><i class="res-action-link failed fa fa-frown-o fa-lg"></i></button>
        </form>
      </div>
    </div>
  <% end %>
</div>

